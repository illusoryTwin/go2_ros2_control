<?xml version="1.0"?>
<robot name="simple_robot">
  
  <!-- Define the 'world' link (implicit in Gazebo, but must be explicitly defined for URDF) -->
  <link name="world"/>

  <!-- Define a link -->
  <link name="base_link">
    <!-- Visual representation of the link -->
    <visual>
      <geometry>
        <box size="0.5 0.5 0.5" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>
  
  <!-- Define an inertial property for the link -->
  <inertial>
    <mass value="1.0" />
    <origin xyz="0 0 0" rpy="0 0 0" />
    <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
  </inertial>

  <!-- Define a joint (fixed) to hold the base_link in place -->
  <joint name="base_joint" type="fixed">
    <parent link="world" />
    <child link="base_link" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
